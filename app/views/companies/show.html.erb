<% content_for :title do %>
  Detalhes de Company
<% end %>

<div class="page-header">
  <h1>Detalhes de Company</h1>
  <div>
    <%= link_to edit_company_path(@company), class: 'btn btn-success' do %>
      <%= icon 'fas', 'edit' %>
      Editar
    <% end %>
    <%= link_to companies_path, class: 'btn btn-outline-secondary' do %>
      <%= icon 'fas', 'bars' %>
      Voltar
    <% end %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @company.name %></dd>

  <dt>Active:</dt>
  <dd><%= @company.active %></dd>

  <dt>Contact Count:</dt>
  <dd><%= @company.contacts.count %></dd>

  <dt>Contacts:</dt>
  <% @company.contacts.each do |contact| %>
    <dd><%= link_to contact.name, contact %></dd>
  <% end %>

</dl>
