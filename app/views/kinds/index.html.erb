<% content_for :title do %>
  Kinds
<% end %>

<div class="page-header">
  <h1>Kinds</h1>
  <% if user_signed_in? %>
    <%= link_to new_kind_path, class: 'btn btn-primary' do %>
      <%= icon 'fas', 'plus' %>
      Novo Kind
    <% end %>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Description</th>
        <th>Contact Count</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @kinds.each do |kind| %>
        <tr>
          <td><%= kind.description %></td>
          <td><%= kind.contacts_count %></td>
          <td>
            <%= link_to kind, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <% if user_signed_in? %>
              <%= link_to edit_kind_path(kind), class: 'btn btn-success btn-sm' do %>
                <%= icon 'fas', 'edit', class: 'fa-fw' %>
              <% end %>
              <%= link_to kind, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
                <%= icon 'fas', 'times', class: 'fa-fw' %>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>